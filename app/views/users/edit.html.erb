<% provide(:title, 'Edit user') %>
<% provide(:button_text, 'Save changes') %>
<h1>Update your profile</h1>
<div class="row">
  <div clas="col-md-6 col-md-offset-3">
    <%= render 'form' %>
    <div class="gravatar_edit">
      <%= gravatar_for @user%>
      <%= link_to "change", "https://gravatar.com/emails", target: :_blank, 
      rel: :noopener %>
    </div>
  </div>
</div>
